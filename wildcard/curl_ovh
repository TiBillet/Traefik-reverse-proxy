https://eu.api.ovh.com/1.0/auth/credential  -d '{
    "accessRules": [
        {
            "method": "POST",
            "path": "/domain/zone/tibillet.org/record"
        },
        {
            "method": "POST",
            "path": "/domain/zone/tibillet.org/refresh"
        },
        {
            "method": "DELETE",
            "path": "/domain/zone/tibillet.org/record/*"
        }
    ],
    "redirection":"https://www.tibillet.org/"
}'